<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>My Poems</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.0.0/dist/tailwind.min.css" rel="stylesheet">
</head>

<body class="bg-gray-900 text-gray-200 transition-colors duration-500">
    <!-- Dark Mode Toggle Button -->
    <div class="flex justify-end p-4">
        <button onclick="toggleTheme()" class="text-gray-200 focus:outline-none">
            <span id="theme-icon">üåô</span>
        </button>
    </div>

    <div class="container mx-auto p-5">
        <h1 class="text-4xl mb-5 text-center text-teal-400 font-bold">Whispers of Ink</h1>
        
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            <% poems.forEach(poem => { %>
                <div class="bg-gray-800 rounded-lg shadow-lg p-4 transform transition duration-500 hover:scale-105 hover:bg-gray-700 relative">
                    <% if (poem.image) { %>
                        <img src="<%= poem.image %>" class="w-full h-80 object-contain rounded-md mb-4 shadow-md transition duration-500 hover:scale-105">
                        <% } %>
                    <h2 class="text-2xl font-semibold text-teal-300 mb-2"><%= poem.title %></h2>
                    <p class="text-gray-400 mb-4"><%= poem.content.slice(0, 100) %>...</p>
                    <a href="/poems/<%= poem._id %>" class="text-teal-400 hover:underline">Read More</a>

                    <!-- Delete Button -->
                    <form action="/poems/delete/<%= poem._id %>" method="POST" class="mt-3">
                        <button type="submit" class="bg-red-600 text-white px-3 py-1 rounded hover:bg-red-500 transition duration-300">Delete</button>
                    </form>
                </div>
            <% }) %>
        </div>

        <div class="text-center mt-8">
            <a href="/poems/add" class="text-teal-400 hover:underline hover:text-teal-300 transition duration-300">Add a New Poem</a>
        </div>
    </div>

    <!-- Dark Mode Toggle Script -->
    <script>
        const themeIcon = document.getElementById("theme-icon");
        const html = document.documentElement;

        const currentTheme = localStorage.getItem("theme");
        if (currentTheme === "dark") {
            html.classList.add("dark");
            themeIcon.textContent = "‚òÄÔ∏è";
        } else {
            themeIcon.textContent = "üåô";
        }

        function toggleTheme() {
            if (html.classList.contains("dark")) {
                html.classList.remove("dark");
                themeIcon.textContent = "üåô";
                localStorage.setItem("theme", "light");
            } else {
                html.classList.add("dark");
                themeIcon.textContent = "‚òÄÔ∏è";
                localStorage.setItem("theme", "dark");
            }
        }
    </script>
</body>

</html>
